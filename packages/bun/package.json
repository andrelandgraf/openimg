{
  "name": "openimg-bun",
  "version": "0.0.3",
  "homepage": "https://github.com/andrelandgraf/openimg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrelandgraf/openimg.git",
    "directory": "packages/bun"
  },
  "license": "MIT",
  "author": "Andre Landgraf <andre.timo.landgraf@gmail.com> (https://andrelandgraf.com)",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/types/*.d.ts"
    }
  },
  "scripts": {
    "build": "bun ./scripts/build.ts && bun run build:ts && bun run build:execs",
    "build:ts": "tsc",
    "build-server:linux-64": "bun build --compile --minify --bytecode --target=bun-linux-x64 ./src/server.ts --outfile ./dist/server-linux-64",
    "build-server:arm-64": "bun build --compile --minify --bytecode --target=bun-linux-arm64 ./src/server.ts --outfile ./dist/server-arm-64",
    "build-server:windows-64": "bun build --compile --minify --bytecode --target=bun-windows-x64 ./src/server.ts --outfile ./dist/server-windows-64",
    "build-server:darwin-64": "bun build --compile --minify --bytecode --target=bun-darwin-x64 ./src/server.ts --outfile ./dist/server-darwin-64",
    "build-server:darwin-arm64": "bun build --compile --minify --bytecode --target=bun-darwin-arm64 ./src/server.ts --outfile ./dist/server-darwin-arm-64",
    "build:execs": "bun run build-server:linux-64 && bun run build-server:arm-64 && bun run build-server:windows-64 && bun run build-server:darwin-64 && bun run build-server:darwin-arm64"
  },
  "bin": {
    "openimg-linux-64": "./dist/server-linux-64",
    "openimg-arm-64": "./dist/server-arm-64",
    "openimg-windows-64": "./dist/server-windows-64",
    "openimg-darwin-64": "./dist/server-darwin-64",
    "openimg-darwin-arm64": "./dist/server-darwin-arm-64"
  },
  "dependencies": {
    "openimg-server-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "sharp": "^0.33.5",
    "typescript": "^5.0.0"
  },
  "files": [
    "src",
    "dist"
  ]
}
